<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="waiter_app_miyako.Views.ItemDetalhesPage"
             xmlns:models="clr-namespace:waiter_app_miyako.Models"
             x:DataType="models:Produtos"
             Title="">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="0">

            <Image Source="{Binding imagem, TargetNullValue='dotnet_bot.png'}"
                   Aspect="AspectFill"
                   HeightRequest="250"
                   HorizontalOptions="FillAndExpand" />

            <VerticalStackLayout Spacing="10" Padding="20">
                <Label Text="{Binding descricao}"
                       FontSize="28"
                       FontAttributes="Bold"/>

                <Label Text="{Binding preco, StringFormat='R$ {0:F2}'}"
                       TextColor="{StaticResource Red}"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                    <Image Source="clock_icon.png" HeightRequest="16" WidthRequest="16" VerticalOptions="Center" />
                    <Label Text="{Binding tempoPreparo, StringFormat='{0} min'}" FontSize="14" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Label Text="{Binding ingredientes}"
                       FontSize="14" Margin="0,10,0,0"/>

                <Label Text="Ingredientes"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,10,0,0"/>

                <Label Text="{Binding ingredientes}"
                       FontSize="14"/>

                <Label Margin="0,10,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Estoque: " FontAttributes="Bold" />
                            <Span Text="{Binding estoque}" />
                            <Span Text=" unidades" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" Margin="0,20,0,10">
                    <Button Text="-" 
                            FontSize="20" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            WidthRequest="50"
                            Clicked="OnDiminuirClicked"/>

                    <Label x:Name="QuantidadeLabel"
                           Text="1"
                           FontSize="28"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Text="+" 
                            FontSize="20" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            WidthRequest="50"
                            Clicked="OnAumentarClicked"/>
                </HorizontalStackLayout>

                <Button Text="ADICIONAR"
                        BackgroundColor="{StaticResource Red}"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="0,10,0,20"
                        Clicked="OnAdicionarClicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>