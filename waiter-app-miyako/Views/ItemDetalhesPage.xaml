<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="waiter_app_miyako.Views.ItemDetalhesPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="0">

            <Image Source="dotnet_bot.png"
                   Aspect="AspectFill"
                   HeightRequest="250"
                   HorizontalOptions="FillAndExpand" />

            <VerticalStackLayout Spacing="10" Padding="20">
                <Label Text="Sushi"
                       FontSize="28"
                       FontAttributes="Bold"/>

                <Label Text="R$16,00"
                       TextColor="{StaticResource Red}"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <Label Text="Organic brown rice, avocado, carrots, cucumber and ponzu sauce"
                       FontSize="14"/>

                <Label Text="Ingredientes"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,10,0,0"/>

                <Label Text="Organic brown rice, avocado, carrots, cucumber and ponzu sauce"
                       FontSize="14"/>

                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" Margin="0,20,0,10">
                    <Button Text="-" 
                            FontSize="20" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            WidthRequest="50"
                            Clicked="OnDiminuirClicked"/>

                    <Label x:Name="QuantidadeLabel"
                           Text="1"
                           FontSize="28"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Text="+" 
                            FontSize="20" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            WidthRequest="50"
                            Clicked="OnAumentarClicked"/>
                </HorizontalStackLayout>

                <Button Text="ADICIONAR"
                        BackgroundColor="{StaticResource Red}"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="0,10,0,20"
                        Clicked="OnAdicionarClicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>