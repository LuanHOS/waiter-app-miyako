<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="waiter_app_miyako.Views.PedidosPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="15">

            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                    <Image Source="red_clock_icon.png" HeightRequest="24" WidthRequest="24" />
                    <Label Text="EM ANDAMENTO" 
                           TextColor="{StaticResource Red}"
                           FontAttributes="Bold"
                           FontSize="18"
                           VerticalOptions="Center"/>
                    <Image Source="green_circle_icon.png" HeightRequest="10" WidthRequest="10" />
                </HorizontalStackLayout>
                <VerticalStackLayout x:Name="EmAndamentoList" Spacing="8">
                    <Grid ColumnDefinitions="*,*,*,Auto" Padding="10,5">
                        <Label Grid.Column="0" Text="MESA" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="HORÁRIO" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="2" Text="QUANT." FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                    <Image Source="finalized_icon.png" HeightRequest="24" WidthRequest="24" />
                    <Label Text="FINALIZADOS HOJE" 
                           TextColor="{StaticResource Red}"
                           FontAttributes="Bold" 
                           FontSize="18"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <VerticalStackLayout x:Name="FinalizadosList" Spacing="8">
                    <Grid ColumnDefinitions="*,*,*,Auto" Padding="10,5">
                        <Label Grid.Column="0" Text="MESA" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="HORÁRIO" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="2" Text="QUANT." FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>