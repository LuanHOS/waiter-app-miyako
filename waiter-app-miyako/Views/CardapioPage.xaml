<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:waiter_app_miyako.ViewModels"
             xmlns:models="clr-namespace:waiter_app_miyako.Models"
             x:Class="waiter_app_miyako.Views.CardapioPage"
             Title="">

    <Grid x:Name="MainGrid" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition x:Name="BottomSheetRow" Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" RowDefinitions="Auto, *">

            <Grid Grid.Row="0" Padding="10" ColumnSpacing="10" RowSpacing="10" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <Button Grid.Row="0" Grid.Column="0" Text="BARCAS" Clicked="OnNavegarParaSessaoClicked" CommandParameter="Barcas"/>
                <Button Grid.Row="0" Grid.Column="1" Text="SUSHIS" Clicked="OnNavegarParaSessaoClicked" CommandParameter="Sushis"/>
                <Button Grid.Row="1" Grid.Column="0" Text="PRATOS QUENTES" Clicked="OnNavegarParaSessaoClicked" CommandParameter="Pratos Quentes"/>
                <Button Grid.Row="1" Grid.Column="1" Text="BEBIDAS" Clicked="OnNavegarParaSessaoClicked" CommandParameter="Bebidas"/>
            </Grid>

            <CollectionView 
                Grid.Row="1"
                x:Name="MenuCollectionView"
                ItemsSource="{Binding CardapioAgrupado}"
                IsGrouped="True">

                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate x:DataType="viewmodels:GrupoDeProdutos">
                        <Label Text="{Binding NomeDoGrupo}" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               Padding="10,20,10,10"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Produtos">
                        <Border StrokeShape="RoundRectangle 10" Padding="10" Margin="10,0,10,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10">
                                <Image Source="{Binding imagem, TargetNullValue='dotnet_bot.png'}" WidthRequest="80" HeightRequest="80" Aspect="AspectFill"/>
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding descricao}" FontAttributes="Bold" />
                                    <Label Text="{Binding ingredientes}" FontSize="12" />
                                </VerticalStackLayout>
                                <Label Grid.Column="2" Text="{Binding preco, StringFormat='R$ {0:F2}'}" VerticalOptions="Center" FontAttributes="Bold"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </Grid>

        <Border Grid.Row="1"
                x:Name="BottomSheet"
                BackgroundColor="LightGray"
                Padding="0"
                Margin="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0"/>
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="0">

                <Grid ColumnDefinitions="Auto, *, Auto" Padding="10,5,10,0" VerticalOptions="Start">

                    <Button Grid.Column="0" 
                            Text="▲" 
                            TextColor="{StaticResource Red}"
                            FontSize="25"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Clicked="OnExpandirClicked" 
                            HorizontalOptions="Start" 
                            VerticalOptions="Center"/>

                    <BoxView Grid.Column="1" x:Name="DragHandle"
                             HeightRequest="5"
                             WidthRequest="40"
                             CornerRadius="2.5"
                             BackgroundColor="{StaticResource Red}"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Margin="0,10,0,10">
                        <BoxView.GestureRecognizers>
                            <PanGestureRecognizer PanUpdated="OnPanUpdated" />
                        </BoxView.GestureRecognizers>
                    </BoxView>

                    <Button Grid.Column="2" 
                            Text="▼" 
                            TextColor="{StaticResource Red}"
                            FontSize="25"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Clicked="OnMinimizarClicked" 
                            HorizontalOptions="End" 
                            VerticalOptions="Center"/>
                </Grid>

                <Label Text="PEDIDO"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="{StaticResource Red}"
                       Margin="0"/>

            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>