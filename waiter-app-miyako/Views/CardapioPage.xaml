<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:waiter_app_miyako.ViewModels"
             xmlns:models="clr-namespace:waiter_app_miyako.Models"
             x:Class="waiter_app_miyako.Views.CardapioPage"
             Title="CardÃ¡pio">

    <Grid x:Name="MainGrid" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition x:Name="BottomSheetRow" Height="100" />
        </Grid.RowDefinitions>

        <!-- ==================== TOPO COM GRUPOS DINÃ‚MICOS ==================== -->
        <Grid Grid.Row="0" RowDefinitions="Auto, *">

            <!-- ðŸ”¹ SubstituÃ­mos os botÃµes fixos por CollectionView dinÃ¢mico -->
            <CollectionView
    Grid.Row="0"
    ItemsSource="{Binding Categorias}"
    SelectionMode="None"
    Margin="10">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout 
            Orientation="Vertical"
            Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Grupos">
                        <Button 
                Text="{Binding grupo}" 
                BackgroundColor="{StaticResource Red}"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="12"
                HeightRequest="70"
                Margin="5"
                Clicked="OnGrupoClicked" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- ==================== LISTA DE PRODUTOS AGRUPADOS ==================== -->
            <CollectionView 
                Grid.Row="1"
                x:Name="MenuCollectionView"
                ItemsSource="{Binding CardapioAgrupado}"
                IsGrouped="True">

                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate x:DataType="viewmodels:GrupoDeProdutos">
                        <Label Text="{Binding NomeDoGrupo}" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               Padding="10,20,10,10"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Produtos">
                        <Border StrokeShape="RoundRectangle 10" Padding="10" Margin="10,0,10,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10">
                                <Image Source="{Binding imagem, TargetNullValue='default_food.png'}" 
                                       WidthRequest="80" HeightRequest="80" Aspect="AspectFill"/>
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding descricao}" FontAttributes="Bold" />
                                    <Label Text="{Binding ingredientes}" FontSize="12" />
                                </VerticalStackLayout>
                                <Label Grid.Column="2" 
                                       Text="{Binding preco, StringFormat='R$ {0:F2}'}" 
                                       VerticalOptions="Center" FontAttributes="Bold"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- ==================== BOTTOM SHEET ==================== -->
        <Border Grid.Row="1"
                x:Name="BottomSheet"
                BackgroundColor="LightGray"
                Padding="0"
                Margin="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0"/>
            </Border.StrokeShape>

            <Grid RowDefinitions="Auto, Auto, *">

                <!-- ===== CabeÃ§alho do BottomSheet ===== -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Padding="10,5,10,0" VerticalOptions="Start">
                    <Button Grid.Column="0" Text="â–²" TextColor="{StaticResource Red}" FontSize="25" 
                            BackgroundColor="Transparent" BorderWidth="0" 
                            Clicked="OnExpandirClicked" HorizontalOptions="Start" VerticalOptions="Center"/>
                    <BoxView Grid.Column="1" x:Name="DragHandle" HeightRequest="5" WidthRequest="40" CornerRadius="2.5" 
                             BackgroundColor="{StaticResource Red}" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,10">
                        <BoxView.GestureRecognizers>
                            <PanGestureRecognizer PanUpdated="OnPanUpdated" />
                        </BoxView.GestureRecognizers>
                    </BoxView>
                    <Button Grid.Column="2" Text="â–¼" TextColor="{StaticResource Red}" FontSize="25" 
                            BackgroundColor="Transparent" BorderWidth="0" 
                            Clicked="OnMinimizarClicked" HorizontalOptions="End" VerticalOptions="Center"/>
                </Grid>

                <!-- ===== Corpo do BottomSheet ===== -->
                <ScrollView Grid.Row="2">
                    <VerticalStackLayout Padding="20,15,20,20" Spacing="15">
                        <Label Text="PEDIDO" FontSize="16" HorizontalOptions="Center" FontAttributes="Bold"/>

                        <!-- MESA + CLIENTES -->
                        <Grid RowDefinitions="Auto, Auto" RowSpacing="15">
                            <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *" ColumnSpacing="10" VerticalOptions="Center">
                                <Image Source="table_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                                <Label Grid.Column="1" Text="Mesa" VerticalOptions="Center" FontAttributes="Bold"/>
                                <Border Grid.Column="2" StrokeShape="RoundRectangle 10" HorizontalOptions="End" BackgroundColor="White">
                                    <Entry Text="{Binding MesaNumero}" WidthRequest="150" FontSize="18"
                                           IsReadOnly="True" HorizontalTextAlignment="Center"
                                           VerticalOptions="Center" BackgroundColor="Transparent" Margin="5,0" />
                                </Border>
                            </Grid>

                            <Grid Grid.Row="1" ColumnDefinitions="Auto, Auto, *" ColumnSpacing="10" VerticalOptions="Center">
                                <Image Source="people_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                                <Label Grid.Column="1" Text="Clientes" VerticalOptions="Center" FontAttributes="Bold"/>
                                <Border Grid.Column="2" StrokeShape="RoundRectangle 10" HorizontalOptions="End" BackgroundColor="White">
                                    <Picker ItemsSource="{Binding NumeroClientes}" WidthRequest="150"/>
                                </Border>
                            </Grid>
                        </Grid>

                        <BoxView HeightRequest="1" Color="Gray" />

                        <!-- ITENS DO PEDIDO -->
                        <VerticalStackLayout Spacing="10" Margin="0,15,0,0">
                            <Label Text="ITENS" FontSize="16" HorizontalOptions="Center" FontAttributes="Bold"/>

                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding ItensDoPedido}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:ItemPedidoViewModel">
                                        <Grid ColumnDefinitions="Auto, *, Auto" Padding="0,10" ColumnSpacing="10">
                                            <Image Source="order_check_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                                <Label Text="{Binding Produto.descricao}" FontAttributes="Bold" />
                                                <HorizontalStackLayout Spacing="5">
                                                    <Label Text="{Binding Produto.preco, StringFormat='R$ {0:F2}'}" FontSize="12" TextColor="Gray"/>
                                                    <Label Text="{Binding ValorTotal, StringFormat='(R$ {0:F2})'}" FontSize="12" TextColor="{StaticResource Red}"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                            <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="10">
                                                <Button Text="-" Command="{Binding DiminuirQuantidadeCommand}" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource Red}" BackgroundColor="Transparent"/>
                                                <Label Text="{Binding Quantidade}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center"/>
                                                <Button Text="+" Command="{Binding AumentarQuantidadeCommand}" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource Red}" BackgroundColor="Transparent"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <Label Text="Vazio" HorizontalOptions="Center" TextColor="Gray" Padding="0,20">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="IsVisible" Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding ItensDoPedido.Count}" Value="0">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" Color="Gray" />

                        <!-- TOTAL -->
                        <VerticalStackLayout Spacing="10" Margin="0,15,0,0">
                            <Label Text="ORDEM" FontSize="16" HorizontalOptions="Center" FontAttributes="Bold"/>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Text="Total Pedido" FontAttributes="Bold" FontSize="18" VerticalOptions="Center"/>
                                <Label Grid.Column="1" Text="{Binding Total, StringFormat='R$ {0:F2}'}" FontAttributes="Bold" FontSize="18" VerticalOptions="Center"/>
                            </Grid>
                            <Button Text="CONCLUIR" BackgroundColor="{StaticResource Red}" TextColor="White"
                                    CornerRadius="10" HeightRequest="50" Margin="0,15,0,0" />
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
