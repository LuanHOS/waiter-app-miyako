<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="waiter_app_miyako.Views.LoginPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="Black" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <Grid BackgroundColor="Black">

        <ScrollView>
            <VerticalStackLayout
                VerticalOptions="Center"
                Spacing="25"
                Padding="30,0">

                <Image Source="logo_miyako.png"
                       HeightRequest="80"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20" />

                <Label Text="Faça seu login!"
                       TextColor="White"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Start" />

                <VerticalStackLayout Spacing="8">
                    <Label Text="MATRÍCULA:"
                           TextColor="White"
                           FontSize="12" />
                    <Border Stroke="#555555"
                            StrokeThickness="1"
                            Padding="0"
                            BackgroundColor="Transparent">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10" Padding="10,5">
                            <Image Source="user_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Placeholder="1234567"
                                   Keyboard="Numeric"
                                   TextColor="White"
                                   PlaceholderColor="Gray"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="SENHA:"
                           TextColor="White"
                           FontSize="12" />
                    <Border Stroke="#555555"
                            StrokeThickness="1"
                            Padding="0"
                            BackgroundColor="Transparent">
                        <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10" Padding="10,5">
                            <Image Source="lock_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Placeholder="••••"
                                   TextColor="White"
                                   PlaceholderColor="Gray"
                                   IsPassword="True"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Button Text="ACESSAR"
                        BackgroundColor="{StaticResource Red}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        Clicked="OnAcessarClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>