<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="waiter_app_miyako.Views.PerfilPage"
             Title=""
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20,40,20,20">

            <Border StrokeShape="Ellipse"
                    StrokeThickness="5"
                    HeightRequest="230"
                    WidthRequest="230"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Padding="0"
                    Stroke="{StaticResource Red}">

                <Border StrokeShape="Ellipse">
                    <Image Aspect="AspectFill"
                           Source="{Binding Funcionario.foto, TargetNullValue='default_user.png'}" />
                </Border>
            </Border>

            <Label 
                Text="{Binding Funcionario.funcionario}"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                Margin="0,5,0,10" />

            <Frame Padding="20" 
                   CornerRadius="15" 
                   BackgroundColor="#F7F7F7" 
                   BorderColor="#E0E0E0"
                   HasShadow="False">
                <VerticalStackLayout Spacing="20">

                    <VerticalStackLayout Spacing="5">
                        <Label Text="MATRÍCULA"
                               FontSize="12"
                               TextColor="{StaticResource Red}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Funcionario.matricula}"
                               FontSize="18"
                               TextColor="#333333" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#EAEAEA"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="CARGO"
                               FontSize="12"
                               TextColor="{StaticResource Red}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Funcionario.cargo}"
                               FontSize="18"
                               TextColor="#333333" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#EAEAEA"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="GÊNERO"
                               FontSize="12"
                               TextColor="{StaticResource Red}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Funcionario.genero}"
                               FontSize="18"
                               TextColor="#333333"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>